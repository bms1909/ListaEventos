<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="evento"
            type="com.brunomusskopf.listaeventos.domain.listaEventos.model.Evento" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.listaEventos.detalhes.DetalhesEventoActivity">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            android:indeterminate="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{evento.title}"
            app:layout_constraintTop_toBottomOf="@id/progress_bar" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{evento.description}"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{evento.image}"
            app:layout_constraintTop_toBottomOf="@id/tv_description" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@{evento.date.toString()}"
            app:layout_constraintTop_toBottomOf="@id/tv_image" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{evento.price}"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />


        <!--        TODO var longitude: Double? = null-->
        <!--        var latitude: Double? = null-->
        <!--        var people: List<Pessoa>? = null-->
        <!--        var cupons: List<Cupom>? = null-->

        <Button
            android:id="@+id/btn_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in"
            app:layout_constraintTop_toBottomOf="@id/tv_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>